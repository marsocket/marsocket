usage() {
	cat <<-EOF
		Usage: "$0" [options]
		Valid options are:
            -h, --help    Show this help message and exit
            -c, --code <CODE>
                          Code of country
            -f, --apnic-file <FILE>
                          Filename of apnic-latest
            -o, --output-file <FILE>
                          Filename of output listfile
EOF
	exit $1
}

get_args() {
	CODE=""
	APNIC_FILE=""
	OUTPUT_FILE=""
    while [ ${#} -gt 0 ]; do
        case "${1}" in
            --help | -h | -v)
                usage 0
                ;;
            --apnic-file | -f)
                APNIC_FILE=$2
                shift
                ;;
            --code | -c)
                CODE="$2"
                shift
                ;;                
            --output-file | -o)
                OUTPUT_FILE="$2"
                shift
                ;;
            *)
                echo "Invalid argument: $1"
                usage 1
                ;;
        esac
        shift 1
    done

	[ -n "$CODE" ] || usage 1
	[ -f "$APNIC_FILE" ] || usage 1
	[ ! -d "$OUTPUT_FILE" ] || usage 1
	[ -d $(dirname "$OUTPUT_FILE") ] || usage 1
}

main() {
    [ -z "$1" ] && usage 0
    get_args "$@"
	cat $APNIC_FILE | awk -F\| '/'$CODE'\|ipv4/ { printf("%s/%d\n", $4, 32-log($5)/log(2)) }' > $OUTPUT_FILE
	[ $? -ne 0 ] || exit 1
	exit 0
}

main "$@"
